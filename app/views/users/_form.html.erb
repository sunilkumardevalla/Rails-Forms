<%= form_for @user do |form| %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= form.label :username, "Username:" %>
    <%= form.text_field :username, :value => @user.username %><br><br>
  </p>
  <p>
    <%= form.label :email, "Email:" %>
    <%= form.text_field :email, :value => @user.email %><br><br>
  </p>
  <p>
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password, :value => @user.password %><br><br>
  </p>
  <p>
    <%= form.submit "Submit" %>
  </p>
  <p>
    <%= link_to "Go back to all users", root_path %><br>
  </p>
<% end %>